{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "app": {
            "type": "string",
            "minLength": 1
        },
        "env": {
            "type": "string",
            "enum": ["dev", "staging", "prod"]
        },
        "port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
        },
        "debug" : {
            "type": "boolean"
        },
        "replicas" : {
            "type": "integer",
            "minimum": 1
        },
        "allowed_hosts" : {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "timeout_seconds" : {
            "type": "integer",
            "minimum": 1
        }
    },
    "required" : ["app", "env", "port", "debug"],
    "additionalProperties": false
}